<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollview"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/qnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1 - "
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="22dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/textQuestionid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:text="This set of Digital Image Processing Questions and Answers for Aptitude test focuses on â€œSmoothing Linear Spatial Filters ?"
                android:textColor="#000"
                android:textSize="22dp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:padding="12dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a) "
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginTop="10dp"
                        android:textColor="#001"
                        android:textSize="18dp" />
                <TextView
                    android:id="@+id/choose1id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blurring"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="10dp"
                    android:textColor="#001"
                    android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="b) "
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginTop="10dp"
                        android:textColor="#001"
                        android:textSize="18dp" />

                <TextView
                    android:id="@+id/choose2id"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noise reduction"
                    android:textColor="#001"
                    android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="c) "
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginTop="10dp"
                        android:textColor="#001"
                        android:textSize="18dp" />
                <TextView
                    android:id="@+id/choose3id"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="All of the mentioned"
                    android:textColor="#001"
                    android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="d) "
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginTop="10dp"
                        android:textColor="#001"
                        android:textSize="18dp" />
                <TextView
                    android:id="@+id/choose4id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="None of the mentioned"
                    android:textColor="#001"
                    android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rightAns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer: c"
                    android:layout_marginRight="20dp"
                    android:textColor="#001"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty : "
                    android:textColor="#001"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/difff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:textColor="#001"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </ScrollView>



    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"

        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="12sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_position="right"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        android:layout_gravity="bottom|left|end">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_svg"
            fab:fab_size="mini"
            fab:fab_label="edit question" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/dell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            fab:fab_size="mini"
            fab:fab_label="delete question" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_svg"
            fab:fab_size="mini"
            fab:fab_label="Share as text"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favourite_svg"
            fab:fab_size="mini"
            fab:fab_label="Add to favourite"/>

    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>