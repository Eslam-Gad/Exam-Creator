<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/course"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Course: DataBase"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter: Introducation" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ImageButton
                android:id="@+id/delet_Fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:background="#fff"
                app:srcCompat="@android:drawable/ic_delete"/>
            </FrameLayout>
            </LinearLayout>
        </LinearLayout>




            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

    <TextView
        android:id="@+id/question_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="questionFav"
        android:textColor="#000"
        android:padding="10dp"
        android:textSize="20sp"/>

   </LinearLayout>
            <LinearLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/choice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="choice1"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/choice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="choice2"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/choice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="choice3"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/choice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="choice4"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="answer"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="difficulty"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>